{{#extends "base"}}

  {{#block "content"}}
    <form method="POST">
      <div class="alert alert-danger mt-5 mb-2">
        Are you sure you want to delete
        {{poster.title}}?
      </div>
      <div>
        <a href="/posters" class="btn btn-secondary btn-sm my-3">Cancel</a>
        <input type="submit" class="btn btn-warning btn-sm my-3" value="Confirm" />
      </div>
    </form>
  {{/block}}

{{/extends}}